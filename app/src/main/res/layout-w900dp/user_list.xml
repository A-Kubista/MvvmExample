<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.example.alek.task.mvvm.view.ui.UserListActivity">

    <!--
    This layout is a two-pane layout for the Users
    master/detail flow.
    
    -->

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/user_list"
        android:name="com.example.alek.mvvmexample.mvvm.view.ui.UserListFragment"
        android:layout_width="@dimen/item_width"
        android:layout_height="match_parent"
        android:paddingTop="2dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.example.alek.task.mvvm.view.ui.UserListActivity"
        tools:listitem="@layout/user_list_content" />

    <FrameLayout
        android:id="@+id/user_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
